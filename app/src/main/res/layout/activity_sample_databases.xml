<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sample_databases"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.tunmgmg.sampledatabases.SampleDatabases"
    android:background="@drawable/color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:paddingTop="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="15dp"
                    android:id="@+id/tv_view1"/>
                <EditText
                    android:layout_width="120dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/color"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:id="@+id/ed_name"
                    android:hint="name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll"
                    android:paddingLeft="5dp"
                    android:textSize="15dp"
                    android:id="@+id/tv_view2"/>
                <EditText
                    android:layout_width="120dp"
                    android:layout_marginLeft="15dp"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="@drawable/color"
                    android:layout_height="50dp"
                    android:id="@+id/ed_roll"
                    android:hint="roll"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textSize="15dp"
                    android:id="@+id/tv_view3"/>
                <EditText
                    android:layout_width="120dp"
                    android:layout_marginLeft="9dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:textColorHint="#ffffff"
                    android:background="@drawable/color"
                    android:layout_height="50dp"
                    android:hint="class"
                    android:id="@+id/ed_class"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Major"
                    android:paddingLeft="5dp"
                    android:id="@+id/tv_view4"
                    android:textSize="15dp"/>
                <EditText
                    android:layout_width="120dp"
                    android:layout_marginLeft="1dp"
                    android:textColorHint="#ffffff"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:background="@drawable/color"
                    android:layout_height="50dp"
                    android:id="@+id/ed_major"
                    android:hint="major"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="horizontal"
            android:paddingTop="50dp"
            android:paddingLeft="75dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Insert"
                    android:background="@drawable/btcolor"
                    android:id="@+id/bt_insert"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:background="@drawable/btcolor"
                    android:text="Delete"
                    android:id="@+id/bt_delete"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Precious"
                    android:background="@drawable/btcolor"
                    android:id="@+id/bt_precious"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Update"
                    android:background="@drawable/btcolor"
                    android:id="@+id/bt_update"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Search"
                    android:background="@drawable/btcolor"
                    android:id="@+id/bt_search"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="Next"
                    android:background="@drawable/btcolor"
                    android:id="@+id/bt_next"/>
            </LinearLayout>
        </LinearLayout>

        <Spinner
            android:layout_width="180dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner">Spinner
        </Spinner>

    </LinearLayout>
</RelativeLayout>
